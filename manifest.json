{
    "name": "TornRadioExtension",
    "version": "0.9",
    "manifest_version": 3,
    "permissions": [
        "offscreen",
        "activeTab",
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.torn.com/*"],
            "js": ["content.js"]
        }
    ],
    "externally_connectable": {
        "matches": ["*://www.torn.com/*"]
    }
}
