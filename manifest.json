{
    "name": "Torn Radio Player",
    "description": "An integrated radio player for Torn.",
    "version": "1.2.4",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": ["background/background.js"],
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.torn.com/*"],
            "js": ["node_modules/webextension-polyfill/dist/browser-polyfill.js", "content/ui.js", "content/content.js"],
            "css": ["content/styles.css"]
        }
    ],
    "externally_connectable": {
        "matches": ["*://www.torn.com/*"]
    },
    "icons": {
        "128": "TRP2.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{123e4567-e89b-12d3-a456-426614169000}"
        }
    }
}