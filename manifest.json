{
    "name": "Torn Radio Player",
    "description": "An integrated radio player for Torn.",
    "version": "1.1.2",
    "manifest_version": 3,
    "permissions": [
        "offscreen",
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.torn.com/*"],
            "js": ["content.js"]
        }
    ],
    "externally_connectable": {
        "matches": ["*://www.torn.com/*"]
    },
    "icons": {
        "128": "TRP2.png"
    }
}